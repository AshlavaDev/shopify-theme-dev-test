{% for block in section.blocks %}
  {% case block.type %}
    {% when 'article_title' %}
      <h1>{{ article.title }}</h1>
    {% when 'article_author' %}
      {% if section.settings.show_author %}
        <small>{{ article.author }}</small>
      {% endif %}
    {% when 'article_published_date' %}
      {% if section.settings.show_time %}
        <time datetime="{{ article.published_at | date: "%Y-%m-%d" }}">{{ article.published_at | date: "%Y-%m-%d" }}</time>
      {% endif %}
    {% when 'article_thumbnail' %}
      <img src="{{ article.image | img_url: 'large' }}" alt="{{ article.image.alt }}">
    {% when 'article_content' %}
      <div>{{ article.content }}</div>
  {% endcase %}
{% endfor %}

{% schema %}
{
  "name": "Template Article",
  "settings" : [
    {
      "type": "checkbox",
      "id": "show_author",
      "default": true,
      "label": "Show Author Name"
    },
    {
      "type": "checkbox",
      "id": "show_time",
      "default": true,
      "label": "Show Date Published"
    }
  ],
  "blocks": [
    {
      "type": "article_title",
      "name": "Article Title",
      "limit": 1
    },
    {
      "type": "article_author",
      "name": "Article Author",
      "limit": 1
    },
    {
      "type": "article_published_date",
      "name": "Article Published Date",
      "limit": 1
    },
    {
      "type": "article_thumbnail",
      "name": "Article Thumbnail",
      "limit": 1
    },
    {
      "type": "article_content",
      "name": "Article Content",
      "limit": 1
    }
  ]
}
{% endschema %}